
{
  "manifest_version": 3,
  "name": "ImpulseLock",
  "version": "1.0.0",
  "description": "Prevent impulsive purchases with mindful reflection",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.in/*", 
        "*://*.amazon.co.uk/*",
        "*://*.amazon.ca/*", 
        "*://*.flipkart.com/*",
        "*://*.walmart.com/*",
        "*://*.ebay.com/*",
        "*://*.etsy.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "debug.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
